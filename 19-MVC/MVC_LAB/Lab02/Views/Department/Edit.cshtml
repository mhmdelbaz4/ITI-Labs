@model EditDepartmentVM

@{
    ViewData["Title"] = "Edit";
    SelectList assignedCoursesSL = new SelectList(Model.Department.Courses, "Id", "Name");
    SelectList newCoursesSL = new SelectList(Model.NewCourses, "Id", "Name");
}

<form class="col-4" asp-action="Edit" method="post">
    
    <div class="mb-3">
        <label asp-for="@Model.Department.Id"> </label>
        <input asp-for="@Model.Department.Id" class="form-control" />
        <span asp-validation-for="@Model.Department.Id" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="@Model.Department.Name" class="form-label"> </label>
        <input asp-for="@Model.Department.Name" class="form-control" />
        <span asp-validation-for="@Model.Department.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Department.Location" class="form-label"> </label>
        <input asp-for="@Model.Department.Location" class="form-control" />
        <span asp-validation-for="@Model.Department.Location" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Department.Capacity" class="form-label"> </label>
        <input asp-for="@Model.Department.Capacity" class="form-control" />
        <span asp-validation-for="@Model.Department.Capacity" class="text-danger"></span>
    </div>

    <input type="submit" value="Update" class="btn btn-success" />

</form>

<div class="col-4 mb-4">

    <form asp-action="changeCourses" asp-asp-controller="Department" method="post" asp-route-deptId="@Model.Department.Id">
        <h4>select to remove courses</h4>

        <select multiple name="crsIdsRemoved" asp-items="@assignedCoursesSL" class="form-select mb-6">
        </select>
        
        <h4>select to Add new courses</h4>
        <select multiple name="crsIdsAdded" asp-items="@newCoursesSL" class="form-select mb-6">
        </select>

        <input type="submit" value="Change" class="btn btn-danger"  />
    </form>
</div>


<a class="btn btn-outline-primary" href="/Department/Index">Back To List</a>

