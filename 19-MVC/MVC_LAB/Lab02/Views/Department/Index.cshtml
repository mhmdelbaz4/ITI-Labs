@model IEnumerable<Department>
@{
    ViewData["Title"] = "Deparetments";
}

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>


<table class="table table-bordered table-hover table-striped col-4">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
        </tr>
    </thead>

    @if (Model?.Count() == 0)
    {
        <tr>
            <td colspan="4">No Departments</td>
        </tr>
    }
    else
    {
        <tbody>
            @foreach (Department dept in Model)
            {
                <tr>
                    <td>@dept.Id</td>
                    <td>@dept.Name</td>
                    <td>@dept.Location</td>
                    <td>@dept.Capacity</td>
                    <td>
                        <a href="/Department/"></a>

                    </td>
                    <td>
                        <a asp-controller="Department" asp-action="Details" asp-route-id=@dept.Id>
                            <i class="fa-solid fa-eye"></i>
                        </a>
                        <a asp-controller="Department" asp-action="Edit" asp-route-id=@dept.Id>
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id=@dept.Id onclick="return confirm('Do you Sure to delete ?');">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    }

</table>